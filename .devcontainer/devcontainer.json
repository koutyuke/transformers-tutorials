{
  "name": "transformers-tutorials",
  "workspaceFolder": "/workspaces/transformers-tutorials/",
  "dockerComposeFile": ["../docker/docker-compose.development.yaml"],
  "service": "app",
  "customizations": {
    "vscode": {
      "extensions": [
        "charliermarsh.ruff",
        "EditorConfig.EditorConfig",
        "ms-python.python",
        "adam-bender.commit-message-editor",
        "eamodio.gitlens",
        "mhutchie.git-graph",
        "ms-python.mypy-type-checker",
        "ms-python.vscode-pylance",
        "tamasfe.even-better-toml",
        "VisualStudioExptTeam.vscodeintellicode",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "streetsidesoftware.code-spell-checker",
        "IronGeek.vscode-env",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "postCreateCommand": "uv python install && uv sync",
  "remoteUser": "root"
}
